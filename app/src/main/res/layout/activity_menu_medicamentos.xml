<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editRecta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuMedicamentos">


    <TextView
        android:id="@+id/actmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_tammudu"
        android:text="@string/Medicamentos"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <Button
        android:id="@+id/btn_insertarMedicamento"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo_tammudu"
        android:text="@string/insertar_medicamento"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265" />

    <Button
        android:id="@+id/btn_consultarMedicamento"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/baloo_tammudu"
        android:text="@string/consultar_medicamento"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_insertarMedicamento" />

    <Button
        android:id="@+id/btn_actualizarMedicamento"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/baloo_tammudu"
        android:text="@string/actualizar_medicamento"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_consultarMedicamento" />

    <Button
        android:id="@+id/btn_eliminarMedicamento"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo_tammudu"
        android:text="@string/eliminar_medicamento"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_actualizarMedicamento"
        app:layout_constraintVertical_bias="0.154" />

</androidx.constraintlayout.widget.ConstraintLayout>